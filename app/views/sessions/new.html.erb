<% provide(:title, "Log in") %>

<div id = "landing">
	<div class = "top">	
		<h1> Welcome to 'Sup </h1>
		<p> 
			A simple way to stay in the loop and never miss out on being where you want to.  
		</p>
	</div>
	<form class = "form-vertical" role="form">
	<span id = "sing-in">
		<h2> Need to know 'sup? Sign in </h2>
			<%= form_tag(url: new_user_path, class: "form-group form") do%>
				<div>
				<%= label_tag("Email") %>
				<%= email_field_tag(:email, "myemail@email.com")%>
				</div>
				<%=	label_tag("Password")%>
				<%= password_field_tag(:password, :placeholder => "Password")%>
				<div>
				<%= submit_tag("Log In", class: "btn btn-primary") %>
				</div>
			<% end %>
	</span>
	<span id = "sign-up">
		<h2> Don't have an account? Sign up </h2>
			<%= form_for(@user, url: new_user_path, class: "form-control") do |f| %>
				<% f.label :name, "Username" %>
				<% f.text_field :name %>
				<% f.label :email  %>
					<% f.text_field :email %>
					<% f.label :password  %>
					<% f.password_field :password %>
					<% f.label :firstName, "First Name" %>
					<% f.text_field :firstName %>
					<% f.label :lastName, "Last Name" %>
					<% f.text_field :lastName %>
					<% f.submit "Sign Up", class: "btn btn-primary" %>	
				<% end %>
	</span>
</form>
</div>
