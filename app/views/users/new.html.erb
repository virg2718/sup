<% provide(:title, "Sign Up") %>

<div class = "main-content">
	<h2> Sign Up </h2>
	<%= form_tag(@user) do %>
		<div><%= label_tag("Username") %></div>			
		<div><%= text_field_tag(:name) %></div>
		<div><%= label_tag("Email") %></div>
		<div><%= email_field_tag(:email, "myemail@email.com") %></div>
		<div><%= label_tag("Password") %></div>
		<div><%= password_field_tag(:password, :placeholder => "Password") %></div>
		<div><%= label_tag("First Name") %></div>
		<div><%= text_field_tag(:firstName) %></div>
		<div><%= label_tag("Lat Name") %></div>
		<div><%= text_field_tag(:lastName) %></div>
		<div><%= submit_tag("Submit", class: "btn btn-primary") %></div>	
	<% end %>
</div>
